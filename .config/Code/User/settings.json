{
    "security.workspace.trust.emptyWindow": false,
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.startupPrompt": "never",

    "git.openRepositoryInParentFolders": "always",
    "telemetry.telemetryLevel": "off",

    "editor.minimap.enabled": false,
    "editor.suggest.preview": true,
    "editor.fontSize": 16,
    "editor.fontFamily": "'JetBrains Mono NL','Droid Sans Mono', 'monospace'",
    "editor.trimAutoWhitespace": true,
    "editor.renderWhitespace": "trailing",
    "editor.inlineSuggest.suppressSuggestions": true,

    "terminal.external.linuxExec": "kgx",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen",
        "-workbench.action.terminal.focusFind",
    ],
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.fontFamily": "'JetBrains Mono NL'",
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.shellIntegration.enabled": false,

    "settingsSync.ignoredSettings": [

    ],
    "extensions.ignoreRecommendations": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "markdownlint.config": {},
    "Lua.workspace.library": [
        "/usr/share/nvim/runtime/lua/"
    ],

    "workbench.list.scrollByPage": true,
    "workbench.editor.defaultBinaryEditor": "hexEditor.hexedit",
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.startupEditor": "none",

    "workbench.tips.enabled": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.autoLockGroups": {
        "workbench.editor.chatSession": true,
        "imagePreview.previewEditor": true
    },
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.limit.value": 7,
    "workbench.editor.limit.enabled": true,
    "workbench.colorTheme": "GitHub Dark",
    "workbench.activityBar.location": "top",

    "explorer.confirmDelete": true,
    "vscodeMarkdownNotes.createNoteOnGoToDefinitionWhenMissing": false,
    "svg.preview.mode": "svg",

    "window.title": " ${appName}",
    "window.zoomLevel": 1,
    "window.dialogStyle": "custom",
    "window.enableMenuBarMnemonics": false,
    "window.density.editorTabHeight": "compact",
    "window.customTitleBarVisibility": "auto",
    "window.menuBarVisibility": "compact",

    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "[markdown]": {
        "diffEditor.ignoreTrimWhitespace": true,
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "window.titleBarStyle": "custom",
    "window.commandCenter": false,
}